+const char *cd_clock_get_weekday_format (void)
+{
+	const char *cLocale = setlocale (LC_TIME, NULL);
+	if (!strncmp (cLocale, "ja", 2))
+		return "%a";   // one character weekday
+	else if (!strncmp (cLocale, "zh", 2))
+		return "%A";   // full weekday
+	else
+	return "%a";
+}
